<h2>Filtrar Asistencia por Fecha</h2>

<form asp-action="FiltrarPorFecha" method="get">
    <label>Fecha de inicio:</label>
    <input type="date" name="fechaInicio" />
    <label>Fecha de fin:</label>
    <input type="date" name="fechaFin" />
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

@if (Model != null)
{
    <h3>Resultados de la búsqueda</h3>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Empleado</th>
                <th>Fecha</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Empleado.NombreUsuario</td>
                    <td>@item.Fecha</td>
                    <td>@(item.Estado ? "Presente" : "Ausente")</td>
                </tr>
            }
        </tbody>
    </table>
}
