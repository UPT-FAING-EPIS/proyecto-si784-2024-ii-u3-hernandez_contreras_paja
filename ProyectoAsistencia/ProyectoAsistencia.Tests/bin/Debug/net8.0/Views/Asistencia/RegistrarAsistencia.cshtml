@{
    ViewData["Title"] = "Registrar Asistencia";
}

<h2>Registrar Asistencia</h2>

<form asp-action="RegistrarAsistencia" method="post">
    <div class="form-group">
        <label>Empleado:</label>
        <select name="empleadoId" class="form-control" required>
            <option value="">Seleccione su nombre</option>
            @foreach (var empleado in ViewBag.Empleados)
            {
                <option value="@empleado.Id">@empleado.NombreUsuario</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Estado:</label>
        <select name="estado" class="form-control" required>
            <option value="true">Presente</option>
            <option value="false">Ausente</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-4">Registrar</button>
</form>
