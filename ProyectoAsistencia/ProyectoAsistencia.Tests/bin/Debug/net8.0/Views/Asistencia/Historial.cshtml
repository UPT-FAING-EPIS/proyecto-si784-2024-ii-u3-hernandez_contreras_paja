@model List<ProyectoAsistencia.Models.Asistencia>

<h2>Historial de Asistencias</h2>

<table class="table">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asistencia in Model)
        {
            <tr>
                <td>@asistencia.Empleado.NombreUsuario</td>
                <td>@asistencia.Fecha</td>
                <td>@(asistencia.Estado ? "Presente" : "Ausente")</td>
            </tr>
        }
    </tbody>
</table>
