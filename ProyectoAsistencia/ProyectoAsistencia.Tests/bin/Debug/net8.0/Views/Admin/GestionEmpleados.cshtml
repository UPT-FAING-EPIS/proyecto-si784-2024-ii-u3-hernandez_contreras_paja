@model IEnumerable<ProyectoAsistencia.Models.Empleado>

<h2>Gestión de Empleados</h2>
<a asp-action="AgregarEmpleado" class="btn btn-primary">Agregar Empleado</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre de Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.Id</td>
                <td>@empleado.NombreUsuario</td>
            </tr>
        }
    </tbody>
</table>
