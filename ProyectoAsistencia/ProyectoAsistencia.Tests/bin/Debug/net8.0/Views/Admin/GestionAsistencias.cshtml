@model IEnumerable<ProyectoAsistencia.Models.Asistencia>

<h2>Gestión de Asistencias</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No hay asistencias registradas.</td>
            </tr>
        }
        else
        {
            @foreach (var asistencia in Model)
            {
                <tr>
                    <td>@asistencia.Id</td>
                    <td>@asistencia.Empleado?.NombreUsuario ?? "Sin nombre"</td>
                    <td>@asistencia.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(asistencia.Estado ? "Presente" : "Ausente")</td>
                    <td>
                        <a asp-action="Detalles" asp-route-id="@asistencia.Id" class="btn btn-primary">Ver Detalles</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
